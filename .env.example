# FuelAnchor Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# Stellar Network Configuration
# ===========================================
# Options: TESTNET, PUBLIC
STELLAR_NETWORK=TESTNET
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# ===========================================
# Contract Addresses (Soroban)
# ===========================================
# Deploy contracts and add addresses here
FUEL_TOKEN_CONTRACT_ID=
VOUCHER_REDEMPTION_CONTRACT_ID=
CREDIT_SCORE_CONTRACT_ID=
GEOFENCING_CONTRACT_ID=

# ===========================================
# Anchor/Issuer Keys
# ===========================================
# NEVER commit real secret keys to version control
ANCHOR_PUBLIC_KEY=
ANCHOR_SECRET_KEY=

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/fuelanchor
REDIS_URL=redis://localhost:6379

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# ===========================================
# Mobile Money Integration
# ===========================================

# M-Pesa (Kenya)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_BUSINESS_SHORTCODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL=https://yourdomain.com/api/webhooks/mpesa

# MTN Mobile Money
MTN_MOMO_SUBSCRIPTION_KEY=
MTN_MOMO_API_USER=
MTN_MOMO_API_KEY=
MTN_MOMO_CALLBACK_URL=https://yourdomain.com/api/webhooks/mtn

# Airtel Money
AIRTEL_CLIENT_ID=
AIRTEL_CLIENT_SECRET=
AIRTEL_CALLBACK_URL=https://yourdomain.com/api/webhooks/airtel

# ===========================================
# External Services
# ===========================================
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Africa's Talking (USSD/SMS)
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=
AFRICASTALKING_USSD_CODE=

# ===========================================
# Feature Flags
# ===========================================
ENABLE_USSD=true
ENABLE_NFC=true
ENABLE_CREDIT_SCORING=true
ENABLE_GEOFENCING=true
ENABLE_OFFLINE_MODE=true

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:19006,http://localhost:3000
